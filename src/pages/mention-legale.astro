---
import "../styles/global.css";
import MainLayout from "../layouts/MainLayout.astro";
import Head from "../layouts/Head.astro";
import Content from "../components/mention-legale/content.astro";

const seo = {
  title: "Bubble Green - Mentions Légales",
  description: "Consultez les mentions légales de Bubble Green, votre partenaire pour des solutions numériques écoresponsables et performantes.",
  keywords: "mentions légales, écoresponsable",
  canonical: "https://bubble-green.com/mention-legale",
  image: "https://bubble-green.com/images/bb_green_seo.png",
  type: "website",
  themeColor: "#ffffff",
};
---

<html lang="en" class="overflow-x-hidden scroll-smooth">
  <Head seo={seo} title="Bubble Green - Mentions Légales" />
  <MainLayout>
    <Content />
  </MainLayout>
</html>
